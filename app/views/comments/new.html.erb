  <input type = "text" name = "comment" id = "comment_input">

  <input type ="hidden" name = "user_id" value = <% session["user_id"] %>>
  <input type ="hidden" name = "post_id" value = <% params["post_id"] %>>

  <button> Save </button>

</form>